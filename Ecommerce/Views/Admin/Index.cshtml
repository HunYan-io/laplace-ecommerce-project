@model Ecommerce.Models.Product
@{ 
    ViewData["Title"]="Dashboard"; 
}
<div class="container text-white py-5">
    <div class="row w-100">
        <div class="col-6">
            <h3 class="mb-4">Latest commands</h3>
            @foreach (var item in (List<Command>)ViewData["Commands"]!)
            {
                <table class="table table-bordered border-secondary mb-5 table-dark table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">Command Id</th>
                            <td>#@item.Id</td>
                        </tr>
                        <tr>
                            <th scope="row">First Name</th>
                            <td>@item.FirstName</td>
                        </tr>
                        <tr>
                            <th scope="row">Last Name</th>
                            <td>@item.LastName</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>@item.Email</td>
                        </tr>
                        <tr>
                            <th scope="row">Phone Number</th>
                            <td>@item.Address</td>
                        </tr>
                            <tr>
                                <th scope="row">Product Id</th>
                                <td>
                        @foreach (var value in item.Items)
                        {
                            
                                <div><a asp-controller="Product" asp-action="index" asp-route-id="@value.ProductID">#@value.ProductID</a> × @value.Quantity</div>
                        }
                        </td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
        <div class="col-6">
                <div class="card bg-primary text-white rounded-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="mb-0">Add Product</h3>
                        </div>
                        <form asp-controller="Admin" asp-action="Product" method="post" class="d-flex flex-column">
                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Name">Product Name</label>
                                <input type="text" class="form-control" size="17" placeholder="Product Name" asp-for="Name">
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Price">Price</label>
                                <input type="number" class="form-control" size="17"
                                       placeholder="Price" asp-for="Price" />
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="Description">Description</label>
                                <input type="tex-area" class="form-control" size="17"
                                       placeholder="Description" asp-for="Description" />
                            </div>


                            <div class="form-outline form-white">
                                <label class="form-label" asp-for="Image">Image link</label>
                                <input type="url" class="form-control"
                                        placeholder="Image Link" asp-for="Image" />
                            </div>
                            <hr class="my-4">
                            <button type="submit" class="btn btn-light btn-block btn-lg">
                                Add
                            </button>
                        </form>
</div>
        </div>
    </div>
</div>
</div>
